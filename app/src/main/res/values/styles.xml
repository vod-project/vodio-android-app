<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fieldStyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/darkBlueCustom</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="buttonBlue" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/background_button_blue_selector</item>
        <item name="android:textColor">@drawable/background_button_blue_selector</item>
        <item name="android:innerRadius">50dp</item>
    </style>

    <style name="transparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/darkBlueCustom</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
